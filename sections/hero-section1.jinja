<section id="{{ sectionId }}" section-id="{{ sectionId }}"
         data-lg-scroll-offset="130"
         data-md-scroll-offset="130"
         data-sm-scroll-offset="94"
         class="hero-section1">
  <div class="container container-slider">
    <div class="hero-slider slider s-slider">
        {% for slide in safeget(settings, "slider", []) %}
         {% set key=loop.index0 %}
          <div class="slider-item">
            <div class="mn-hero-slide slide-{{ key + 1 }}" style="background-image: url('{{image_url(slide.image)}}');">
                <div class="mn-hero-detail">
                    <p class="label" style="{% if settings.background_color_discount %} --backColor: {{ settings.background_color_discount }}; {% endif %}" >
                        <span style="{% if settings.color_discount %} color: {{ settings.color_discount }}; {% endif %}">{{ slide.rate }}<br>{{ slide.rate_text }}</span>
                    </p>
                    <h1 style="{% if settings.text_color %} color: {{ settings.text_color }}; {% endif %}" >{{ slide.title }}</h1>
                    <p style="{% if settings.text_color %} color: {{ settings.text_color }}; {% endif %}">{{ slide.sub_title }}</p>
                    <a href="{% if slide.url %}{{ slide.url }}{% else %}/{% endif %}" class="mn-btn-2"><span>{{ slide.button_text }}</span></a>
                </div>
                
            </div>
                                

            {# <div class="box-1-1 ratio21_9">
              <div class="content">
                <a href="{% if slide.url %}{{ slide.url }}{% else %}/{% endif %}" class="d-flex flex-column justify-content-start"
                   style="position: relative; width: 100%; height: 100%; {% if settings.background_color %} background-color: {{ settings.background_color }}; {% endif %}">
                    {% if slide.image %}
                      <img class="d-block w-100 slider-image-{{ key }}" style="width: 100%; height: 100%; object-fit: cover"
                              {% if key == 0 %}
                                srcset="
                                 {{ image_url(slide.image) }} 320w,
                                 {{ image_url(slide.image, w=960, q=100, f='auto') }} 480w,
                                 {{ image_url(slide.image, w=1280, q=100, f='auto') }} 640w,
                                 {{ image_url(slide.image, w=1920, q=100, f='auto') }} 960w,
                                 {{ image_url(slide.image, w=2220, q=100, f='auto') }} 1110w,
                                "
                                src="{{ image_url(slide.image, w=2220, q=100, f='auto') }}"
                                  {% else %}
                                    data-srcset="
                                 {{ image_url(slide.image, w=620, q=100, f='auto') }} 320w,
                                 {{ image_url(slide.image, w=960, q=100, f='auto') }} 480w,
                                 {{ image_url(slide.image, w=1280, q=100, f='auto') }} 640w,
                                 {{ image_url(slide.image, w=1920, q=100, f='auto') }} 960w,
                                 {{ image_url(slide.image, w=2220, q=100, f='auto') }} 1110w,
                                "
                                    data-src="{{ image_url(slide.image, w=2220, q=100, f='auto') }}"
                              {% endif %}
                           sizes="(max-width: 1110px) 100vw, 1110px"
                           alt="{{ slide.title }}"
                      >
                    {% endif %}
                  <div class="d-flex flex-column align-items-center justify-content-center"
                       style="width: 100%; height: 100%; position: absolute; top:0; left: 0; {% if settings.text_color %} color: {{ settings.text_color }}; {% endif %}">
                    <h2 style="font-size: 3.5rem">
                        {{ slide.title }}
                    </h2>
                    <p style="font-size: 2rem">
                        {{ slide.des }}
                    </p>
                  </div>
                </a>
              </div>
            </div> #}
          </div>
        {% endfor %}
    </div>
  </div>
</section>


<script>
    document.addEventListener("DOMContentLoaded", function(){
        $('[section-id={{ sectionId }}] .hero-slider').slick({
            infinite: false,
            autoplay: true,
            arrows: {% if (settings.hide_arrows or (settings.slider | length <= 1)) %}false{% else %}true{% endif %},
            dots: {% if (settings.hide_dots or (settings.slider | length <= 1)) %}false{% else %}true{% endif %},
            rtl: !(window.appDirection === 'ltr')
        });


        
    });
</script>
